<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="triangle" class = "com.test.basicspring.shape.Triangle" autowire="byName" scope="singleton">
        <property name="type" value="Equilateral"/>
        <property name="sideLengths">
            <list>
                <value>1</value>
                <value>2</value>
                <value>3</value>
            </list>
        </property>
    </bean>

    <bean id="circle" class="com.test.basicspring.shape.Circle" scope="prototype">
        <property name="center" ref="pointA"/>
        <property name="radius" value="5.0"/>
    </bean>

    <bean id="pointA" class="com.test.basicspring.shape.Point">
        <property name="x" value="1.0"/>
        <property name="y" value="1.0"/>
    </bean>

    <bean id="pointB" class="com.test.basicspring.shape.Point">
        <property name="x" value="2"/>
        <property name="y" value="2"/>
    </bean>

    <bean id="pointC" class="com.test.basicspring.shape.Point">
        <property name="x" value="3"/>
        <property name="y" value="3"/>
    </bean>

</beans>